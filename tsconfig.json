{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@/*": [
        "./test/*"
      ]
    },
    "types": [
      "@types/node"
    ]
  },
  "include": [ "./test/**/*" ],
  "files": [ "src/index.ts" ]
}
